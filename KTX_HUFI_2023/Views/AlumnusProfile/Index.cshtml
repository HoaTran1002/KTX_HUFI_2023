
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAlumnus.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Thông tin sinh viên</h3>
            </div>
            <div class="col-12 col-xl-4">
                <!-- Empty  -->
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-3">
        <div class="profile_card">
            <div class="profile_card-img">
                <img src="~/Assets/ClientManager/images/faces/face28.jpg" alt="">
                <button class="profile_card-img-btn-change">
                    <i class="fa-regular fa-camera"></i>
                </button>
            </div>
            <div class="profile_card-content">
                <div class="profile_card-content-list">
                    <div class="profile_card-content-item">
                        <h3 class="profile_card-content-item-title">Khóa</h3>
                        <p class="profile_card-content-item-content">11DHTH10</p>
                    </div>
                    <div class="profile_card-content-item">
                        <h3 class="profile_card-content-item-title">Chuyên ngành</h3>
                        <p class="profile_card-content-item-content">Công nghệ thông tin</p>
                    </div>
                    <div class="profile_card-content-item">
                        <h3 class="profile_card-content-item-title">Email</h3>
                        <p class="profile_card-content-item-content">info@edu.com.vn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9">
        <form action="" class="KTX-form" method="">
            <div class="row">
                <div class="col-xl-6">
                    <div class="KTX-form-text-field">
                        <label for="username3">Tên tài khoản</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="KTX-form-text-field">
                        <label for="username3">Email</label>
                        <input autocomplete="off" type="email" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-3">
                    <div class="KTX-form-text-field">
                        <label for="username3">Giới tính</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="KTX-form-text-field">
                        <label for="username3">Ngày sinh</label>
                        <input autocomplete="off" type="date" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="KTX-form-text-field">
                        <label for="username3">Số điện thoại</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="KTX-form-text-field">
                        <label for="username3">Quê quán</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="KTX-form-text-field">
                        <label for="username3">Địa chỉ nhà</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="KTX-form-text-field">
                        <label for="username3">Phường</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="KTX-form-text-field">
                        <label for="username3">Quận - Huyện</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="KTX-form-text-field">
                        <label for="username3">Thành Phố</label>
                        <input autocomplete="off" type="text" id="username3" placeholder="Enter your username" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="KTX-form-text-field">
                        <button type="submit" class="KTX-form-text-field-submit">Cập nhập</button>
                        <a href="#" class="KTX-form-text-field-cancel">Thoát</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
